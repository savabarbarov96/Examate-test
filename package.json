{
  "name": "@examate/root",
  "version": "1.0.0",
  "private": true,
  "description": "Examate - Microservices Examination Management System",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "packages/*",
    "services/auth-service",
    "services/user-service",
    "services/dashboard-service",
    "services/statistics-service",
    "services/frontend"
  ],
  "scripts": {

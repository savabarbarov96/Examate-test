# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/examate

# Redis Connection (use 127.0.0.1 instead of localhost for better WSL2/Docker compatibility)
REDIS_URL=redis://127.0.0.1:6379

# Server Configuration
PORT=5000
CLIENT_ORIGIN=http://localhost:8080
NODE_ENV=development

# Token lifetimes
ACCESS_TOKEN_EXPIRES_IN_MINUTES=60

# JWT Secrets (generate long random strings for production)
JWT_SECRET=your-secret-key-here-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-secret-key-here-minimum-32-characters
JWT_COOKIE_EXPIRES_IN=90

# Email Configuration (SMTP)
EMAIL_USERNAME=noreply@example.com
EMAIL_PASSWORD=your-email-password

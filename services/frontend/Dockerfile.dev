FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 8080

# Environment variables from docker-compose will be available during runtime
# Start in development mode with hot reload, listening on 0.0.0.0 for Docker network access
CMD ["npm", "run", "dev"]

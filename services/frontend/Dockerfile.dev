# =============================================================================
# Frontend - Development Dockerfile
# Minimal setup for Vite dev server with hot reload
# =============================================================================

FROM node:20-alpine

WORKDIR /app

# Install dependencies at build time (will be overridden by volume mount in compose)
COPY package.json package-lock.json ./

# Use npm ci for faster, deterministic installs
RUN npm ci

# Note: Source code is mounted via volumes in docker-compose.dev.yml
# Vite provides HMR (Hot Module Replacement)

EXPOSE 3000

# Start Vite dev server (host 0.0.0.0 allows Docker network access)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
